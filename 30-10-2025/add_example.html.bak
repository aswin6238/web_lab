<!DOCTYPE html>
<html>
  <head>
    <title>Keyboard Event Example</title>
  </head>
  <body>
	<label for = "num1">Enter First Number</label>
	<input type = "number" value = "0" id = "num1">
	<label for = "num1">Enter Second Number</label>
	<input type = "number" value = "0" id = "num2">
	<br>
	<button id = "add">Add</button>
	<h1 id="output">---</h1>

    <script>
	const addButton = document.getElementById("add");
	const output = document.getElementById("output");
	
	addButton.addEventListener("click", () => {
		const x = Number(document.getElementById("num1").value);
		const y = Number(document.getElementById("num2").value);
		let z = x + y;
		console.log(x + y);
		output.innerHTML = z;
	});
	
	
    </script>
  </body>
</html>
